{
  "name": "natours",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all --parallel live-server watch",
    "live-server": "live-server",
    "watch": "node-sass sass/main.scss css/style.comp.css -w",
    "compile": "node-sass sass/main.scss css/style.comp.css",
    "concat": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile concat prefix compress"
  },
  "author": "Lynette Lopez",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "concat": "^1.0.3",
    "live-server": "^1.2.1",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1"
  }
}